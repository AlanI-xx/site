.row
  .span5
    .hero-unit
      %h2.start Let's start!
      .geolocation-only
        %form
          %h3 Use your current location
          %button.btn#geolocate(type="button" data-loading-text="Locating...")
            Click here!
      %div
        %form#address
          %h3
            %span.geolocation-only Or use
            %span.geolocation-alt Use
            location search
          .input-append
            %input.span3#addressInput(type="text" placeholder="Address...")
            %button.btn#addressSearch(type="submit" data-loading-text="Searching...") Search
      %div
        %form.form-inline#division
          %h3 Or select your division
          %select#divisionSelector
            %option(value="") Division...
            - states.each do |state_id, state|
              %optgroup(label="#{state["name"]}")
                - divisions.each do |division_id, division|
                  - next if division["state"] != "state/#{state_id}"
                  %option(value="#{division_id}")= division["name"]
          %button.btn(type="submit") Go

  .span7
    .content-box
      = intro
    .content-box
      .lead
        Latest News (
        %a(href='/news.html')>< Older News...
        )
      = news
